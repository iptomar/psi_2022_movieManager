<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FavoritesList"
        android:background="@drawable/background_color">


    <TextView
            android:id="@+id/lblFavouriteMovies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="Favourite Movies"
            tools:text="Favourite Movies"
            android:textColor="#215E21"
            android:textSize="30sp"
            android:textStyle="bold"
    />

    <ImageView
            android:id="@+id/btnGoBackMain"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_gobackmain"
            app:layout_constraintEnd_toStartOf="@id/lblFavouriteMovies"
            app:layout_constraintTop_toTopOf="@id/lblFavouriteMovies"
            android:layout_marginEnd="20dp"
    />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/listFav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="2dp"
    />
</android.support.constraint.ConstraintLayout>